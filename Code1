<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>DRS Flight Animation</title>
  <style>
    body { margin: 0; overflow: hidden; background: #0b0e13; }
    canvas { display: block; }
  </style>
</head>
<body>

<script src="https://cdn.jsdelivr.net/npm/three@0.152.2/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.152.2/examples/js/controls/OrbitControls.js"></script>

<script>
/* Scene */
const scene = new THREE.Scene();
scene.fog = new THREE.Fog(0x0b0e13, 20, 120);

/* Camera */
const camera = new THREE.PerspectiveCamera(60, window.innerWidth/window.innerHeight, 0.1, 500);
camera.position.set(15, 10, 25);

/* Renderer */
const renderer = new THREE.WebGLRenderer({ antialias: true });
renderer.setSize(window.innerWidth, window.innerHeight);
renderer.setPixelRatio(window.devicePixelRatio);
document.body.appendChild(renderer.domElement);

/* Controls */
const controls = new THREE.OrbitControls(camera, renderer.domElement);
controls.enableDamping = true;

/* Lighting */
scene.add(new THREE.AmbientLight(0xffffff, 0.6));
const dirLight = new THREE.DirectionalLight(0xffffff, 0.8);
dirLight.position.set(20, 30, 10);
scene.add(dirLight);

/* Ground */
const ground = new THREE.Mesh(
  new THREE.PlaneGeometry(200, 200),
  new THREE.MeshStandardMaterial({ color: 0x1a1f2b })
);
ground.rotation.x = -Math.PI / 2;
ground.position.y = -2;
scene.add(ground);

/* Destination Marker */
const marker = new THREE.Mesh(
  new THREE.CylinderGeometry(0.6, 0.6, 0.2, 32),
  new THREE.MeshStandardMaterial({ color: 0x2ecc71 })
);
marker.position.set(20, -1.9, 0);
scene.add(marker);

/* Rocket */
const rocket = new THREE.Group();

// Body
const body = new THREE.Mesh(
  new THREE.CylinderGeometry(0.5, 0.5, 6, 32),
  new THREE.MeshStandardMaterial({ color: 0xffffff })
);
rocket.add(body);

// Nose
const nose = new THREE.Mesh(
  new THREE.ConeGeometry(0.5, 1.2, 32),
  new THREE.MeshStandardMaterial({ color: 0xffffff })
);
nose.position.y = 3.6;
rocket.add(nose);

// Fins
for (let i = 0; i < 3; i++) {
  const fin = new THREE.Mesh(
    new THREE.BoxGeometry(0.1, 1.2, 0.8),
    new THREE.MeshStandardMaterial({ color: 0xdddddd })
  );
  fin.position.y = -2.2;
  fin.rotation.y = (i / 3) * Math.PI * 2;
  fin.position.x = Math.cos(fin.rotation.y) * 0.6;
  fin.position.z = Math.sin(fin.rotation.y) * 0.6;
  rocket.add(fin);
}

scene.add(rocket);

/* Parachute */
const chute = new THREE.Mesh(
  new THREE.SphereGeometry(2, 32, 16, 0, Math.PI),
  new THREE.MeshStandardMaterial({ color: 0xff5555, side: THREE.DoubleSide })
);
chute.visible = false;
scene.add(chute);

/* Animation State */
let phase = 0;
let t = 0;

function animate() {
  requestAnimationFrame(animate);
  controls.update();

  /* PHASES */
  if (phase === 0) { // Takeoff
    rocket.position.y += 0.05;
    if (rocket.position.y > 10) phase = 1;
  }

  if (phase === 1) { // Rotate + cruise
    rocket.rotation.z = -Math.PI / 2;
    rocket.position.x += 0.05;
    if (rocket.position.x > 20) phase = 2;
  }

  if (phase === 2) { // Descent
    rocket.rotation.z = 0;
    rocket.position.y -= 0.03;
    chute.visible = true;
    chute.position.set(
      rocket.position.x,
      rocket.position.y + 3,
      rocket.position.z
    );
    if (rocket.position.y < 0) phase = 3;
  }

  renderer.render(scene, camera);
}

animate();

/* Resize */
window.addEventListener('resize', () => {
  camera.aspect = window.innerWidth/window.innerHeight;
  camera.updateProjectionMatrix();
  renderer.setSize(window.innerWidth, window.innerHeight);
});
</script>

</body>
</html>
